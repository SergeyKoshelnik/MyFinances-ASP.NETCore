@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавить операцию";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h3>Добавить расход</h3>
            <hr />

            <form id="form-addCost" asp-controller="AddRemoveOperation" asp-action="AddCost" asp-route-id="@ViewBag.UserId"
                  method="post">
                
                <div class="form-group">
                    <label><i>Комментарий к операции</i></label>

                    <input name="txtCommentForCost" class="form-control" type="text" />
                </div>

                <div class="form-group">
                    <label><i>Введите сумму</i></label>

                    <input name="txtSummofCost" class="form-control" type="text" />
                </div>

                <div><input type="submit" name="btnAddCost" class="btn btn-success btn-sm" value="Подтвердить" /></div>

            </form>

        </div>

    </div>

</div>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/validation-form.js"></script>
}
